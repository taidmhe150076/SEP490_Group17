@page "/AllWorkshop"
@model COTSEClient.Pages.Department.AllWorkshopModel
@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<html lang="en">
<body>
    <main>
        <section class="py-5">
            <div class="container px-5 mb-5">
                <div class="text-center mb-5">
                    <h1 class="display-5 fw-bolder mb-0"><span class="text-gradient d-inline">Các hội thảo đã tổ chức</span></h1>
                </div>
                <div class="row gx-5 justify-content-center">
                    <div class="col-lg-10 col-xl-8 col-xxl-7">
                        <!-- Project Cards -->
                        <div class="row row-cols-1 row-cols-md-2 g-4">
                            <!-- Project Card 1-->
                            <div class="col">
                                <div class="card overflow-hidden shadow rounded-4 border-0 h-100">
                                    <div class="card-body p-3">
                                        <h2 class="fw-bolder">Hội thảo 1</h2>
                                        <p class="card-text">Tiêu đề hội thảo 1</p>
                                        <a class="btn btn-primary" href="#">Xem chi tiết</a>

                                    </div>
                                </div>
                            </div>
                            <!-- Project Card 2-->
                            <div class="col">
                                <div class="card overflow-hidden shadow rounded-4 border-0 h-100">
                                    <div class="card-body p-3">
                                        <h2 class="fw-bolder">Hội thảo 2</h2>
                                        <p class="card-text">Tiêu đề hội thảo 2</p>
                                        <a class="btn btn-primary" href="#">Xem chi tiết</a>

                                    </div>
                                </div>
                            </div>
                            <!-- Add more project cards here -->
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Call to action section-->
        <section class="py-5 bg-gradient-primary-to-secondary text-white">
            <div class="container px-5 my-5">
                <div class="text-center">
                    <h2 class="display-4 fw-bolder mb-4">Tạo hội thảo mới?</h2>
                    <a class="btn btn-outline-light btn-lg px-5 py-3 fs-6 fw-bolder" href="/NewWorkshop">Tạo mới</a>
                </div>
            </div>
        </section>
    </main>
</body>
</html>
