@page
@model COTSEClient.Pages.Quizzes.DoQuizzesModel
@{
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset='utf-8'>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <title>Question Test</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/quizztemplate.css" rel="stylesheet" />
</head>
<body>
    <div class="widget-wrap">
        @if (Model.WorkshopQuestions != null)
        {
            <form asp-page="QuestionTest" method="post">
                <div class="widget-wrap">
                    <label>Participant Email</label>
                    <input type="text" asp-for="@Model.ParticipantEmail" required>
                    <h1>SIMPLE JS QUIZ</h1>
                    <div id="quizWrap">

                        @for (int i = 0; i < Model.WorkshopQuestions.Count; i++)
                        {
                            <div id="quizQn_@Model.WorkshopQuestions[i].Id"> @Model.WorkshopQuestions[i].QuestionText</div>
                            foreach (var answer in @Model.WorkshopQuestions[i].AnswerQuestions)
                            {
                                <div id="quizAns">
                                    <input type="radio" name="@answer.AnswerText" value="@answer.Id" onclick="handleRadioClick(this)">
                                    <label>@answer.AnswerText</label>
                                </div>
                            }

                            <input type="text" asp-for="@Model.AnswerParticipantList[i].QuestionId" id="@Model.WorkshopQuestions[i].Id" value="@Model.WorkshopQuestions[i].Id" />

                            <input type="text" asp-for="@Model.AnswerParticipantList[i].Answer" id="AnswerParticipant_@Model.WorkshopQuestions[i].Id" />
                        }
                        <input type="hidden" asp-for="@Model.TestCurrentId" />
                        <input type="hidden" asp-for="@Model.WorkShopId" />
                        <button type="submit" class="btn btn-primary">Gửi</button>
 </form>
            }
        </div>
    </div>

    <script>
        function handleRadioClick(radio) {
            console.log("Clicked");
            var selectedAnswerId = radio.value;
            var selectedAnswerName = radio.name;
            document.getElementById('AnswerParticipant_' + selectedAnswerName).value = selectedAnswerId;
            console.log(selectedAnswerName);
            console.log(selectedAnswerId);

            var allRadios = document.querySelectorAll('input[type="radio"]');
            var currentQuestion = radio.closest('.card');
            var radiosInCurrentQuestion = currentQuestion.querySelectorAll('input[type="radio"]');

            allRadios.forEach(function (radio) {
                if (!radio.closest('.card').isSameNode(currentQuestion)) {
                    radio.disabled = true;
                }
            });

            radiosInCurrentQuestion.forEach(function (radioInQuestion) {
                if (radioInQuestion !== radio) {
                    radioInQuestion.disabled = true;
                }
            });
        }
    </script>
</body>

</html>
