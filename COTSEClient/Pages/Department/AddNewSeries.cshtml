@page "/NewSeries"
@model COTSEClient.Pages.Department.AddNewSeriesModel
@{
    Layout = "_Layout";
}
<!DOCTYPE html>

<html lang="en">
<body class="d-flex flex-column h-100 bg-light">
    <main class="flex-shrink-0">
        <div class="container px-5 my-5">
            <div class="col-lg-11 col-xl-9 col-xxl-8">
                <div class="d-flex align-items-center justify-content-between mb-4">
                    <h2 class="text-primary fw-bolder mb-0">Tạo chuỗi hội thảo mới</h2>
                    <form method="post">
                        <div class="form-group">
                            <label for="leaderName">Tên chuỗi hội thảo:</label>
                            <input type="text" class="form-control" id="leaderName" name="leaderName" placeholder="Nhập tên chuỗi hội thảo">
                        </div>
                        <div class="form-group">
                            <label for="startDate">Ngày bắt đầu:</label>
                            <input type="date" class="form-control" id="startDate" name="startDate">
                        </div>
                        <button type="submit" class="btn btn-primary">Lưu</button>
                    </form>
                </div>
            </div>
        </div>
    </main>
</body>
</html>