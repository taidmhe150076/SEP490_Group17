@page "/NewWorkshop"
@model COTSEClient.Pages.Department.AddNewWorkshopModel
@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<html lang="en">
<body class="d-flex flex-column h-100 bg-light">
    <main class="flex-shrink-0">
        <!-- Page Content-->
        <div class="container px-5 my-5">
            <div class="text-center mb-5">
                <h1 class="display-5 fw-bolder mb-0"><span class="text-gradient d-inline">Tạo mới hội thảo</span></h1>
            </div>
            <div class="row gx-5 justify-content-center">
                <div class="col-lg-11 col-xl-9 col-xxl-8">
                    <!-- Experience Section-->
                    <div class="d-flex align-items-center justify-content-between mb-4">
                        <h2 class="text-primary fw-bolder mb-0">Tạo mới</h2>
                        <form id="importForm">
                            <input type="file" id="workshopFile" accept=".xlsx" style="display: none;">
                            <label for="workshopFile" class="btn btn-primary px-4 py-3">
                                <div class="d-inline-block bi bi-upload me-2"></div>
                                Nhập từ Excel
                            </label>
                        </form>
                    </div>
                    <!-- Display imported workshop data -->
                    <div class="table-responsive">
                        <h2>Dữ liệu hội thảo </h2>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th scope="col">Ngày diễn ra</th>
                                    <th scope="col">Tiêu đề</th>
                                    <th scope="col">Chú thích</th>
                                    <th scope="col">Diễn giả</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><input type="date" id="workshopDate" name="workshopDate"></td>
                                    <td></td>
                                    <td></td>
                                    <td>
                                        <select id="presenter" name="presenter" class="form-select">
                                            <option value="presenter1">DuongTB</option>
                                            <option value="presenter2">HoangPM</option>
                                            <option value="presenter3">DuyDn</option>
                                        </select>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <a class="btn btn-primary px-4 py-3" href="#!">
                            <div class="d-inline-block bi bi-save me-2"></div>
                            Lưu
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>
</html>
