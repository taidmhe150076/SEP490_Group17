@page "/AddData"
@model COTSEClient.Pages.Department.AddDataWorkshopModel
@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<html lang="en">
<body class="d-flex flex-column h-100 bg-light">
    <main class="flex-shrink-0">
        <div class="container px-5 my-5">
            <div class="text-center mb-5">
                <h1 class="display-5 fw-bolder mb-0"><span class="text-gradient d-inline">Nhập dữ liệu hội thảo</span></h1>
            </div>
            <form method="post">
                <div class="form-group">
                    <label for="slide">Slide:</label>
                    <input type="file" id="slide" name="slide" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="questions">Bộ câu hỏi:</label>
                    <textarea id="questions" name="questions" class="form-control"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Gửi</button>
                <button type="button" class="btn btn-secondary">Lưu</button>
            </form>
        </div>
    </main>
</body>
</html>