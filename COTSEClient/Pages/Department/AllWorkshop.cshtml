@page "/AllWorkshop"
@model COTSEClient.Pages.Department.AllWorkshopModel
@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        /* Custom CSS */
        .custom-table {
            margin-bottom: 20px;
            width: 100%; /* Set the table width to 100% */
        }

            .custom-table th,
            .custom-table td {
                font-size: 18px; /* Increase font size */
                padding: 15px; /* Increase cell padding */
            }

            .custom-table th {
                background-color: #f8f9fa; /* Change header background color */
            }
        /* Search bar and button customization */
        .search-bar {
            margin-bottom: 20px;
        }

            .search-bar .form-control {
                border-radius: 20px; /* Round corners of input field */
            }

            .search-bar .input-group-append button {
                border-radius: 20px; /* Round corners of button */
            }
        /* CSS để căn chỉnh ảnh, mô tả và bảng */
        .image-description-container {
            display: flex;
            align-items: center;
            margin-bottom: 30px; /* Khoảng cách giữa container và phần tiếp theo */
        }

        .image-container {
            flex: 0 0 auto; 
            margin-right: 20px; 
            margin-bottom: 10px; 
            max-width: 100%
        }

            .image-container img {
                max-width: 100%%; /* Ảnh không vượt quá chiều rộng của container */
                height: auto; /* Chiều cao tự động tính theo tỉ lệ */
            }

        .description, .custom-table {
            flex: 1; /* Mô tả và bảng chiếm phần còn lại của không gian */
            margin-bottom: 0; /* Không có khoảng cách giữa mô tả và bảng */
        }

        .description-container {
            padding: 20px; /* Tăng khoảng cách giữa phần mô tả và viền container */
            background-color: #f8f9fa;
            border-radius: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

    </style>
</head>
<body>
    <main>
        <section class="py-5">
            <div class="container mb-5">
                <div class="text-center mb-5">
                    <h1 class="display-5 fw-bolder mb-0"><span class="text-gradient d-inline">@Model.workshopSeries.WorkshopSeriesName</span></h1>
                </div>
                <!-- Search bar -->
                <div class="row justify-content-center search-bar">
                    <div class="col-lg-6">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Tìm kiếm theo tên hội thảo">
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="button">Tìm kiếm</button>
                            </div>
                        </div>
                    </div>
                </div>
                <!--Series Workshop Infor-->

                <div class="row justify-content-center image-description-container">
                    <!-- Container cho ảnh -->
                    <div class="col-md-3 image-container">
                        <div class="text-center">
                            <img style="width: 200%; height: auto;" src="data:image/png;base64,@Model.workshopSeries.Image" class="avatar img-circle img-thumbnail" alt="avatar">
                        </div>
                    </div>

                    <!-- Container cho mô tả -->
                    <div class="col-md-9 description-container">
                        <p>Mô tả: @Html.Raw(@Model.workshopSeries.Description)</p>
                    </div>
                </div>
                <!-- Workshop table -->
                <div class="row justify-content-center">
                    <div class="col-md-10">
                        <table class="table custom-table">
                            <thead>
                                <tr>
                                    <th scope="col">Tên hội thảo</th>
                                    <th scope="col">Tùy chọn</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Workshops)
                                {
                                    <tr>
                                        <td>@item.WorkshopName</td>
                                        <td>
                                            <a class="btn btn-primary" href="/evaluate?workShopId=@item.Id&&wsSeriesId=@Model.WorkshopSeriesId">Xem chi tiết</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </section>
        <!-- Call to action section-->
        <section class="py-5 bg-gradient-primary-to-secondary text-white">
            <div class="container my-5">
                <div class="text-center">
                    <h2 class="display-4 fw-bolder mb-4">Tạo hội thảo mới?</h2>
                    <a class="btn btn-outline-light btn-lg px-5 py-3 fs-6 fw-bolder" href="/NewWorkshop">Tạo mới</a>
                </div>
            </div>
        </section>
    </main>
</body>
</html>