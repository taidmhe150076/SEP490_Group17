@page "/AllWorkshop"
@model COTSEClient.Pages.Department.AllWorkshopModel
@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        /* Custom CSS */
        .custom-table {
            margin-bottom: 20px;
            width: 100%; /* Set the table width to 100% */
        }

            .custom-table th,
            .custom-table td {
                font-size: 18px; /* Increase font size */
                padding: 15px; /* Increase cell padding */
            }

            .custom-table th {
                background-color: #f8f9fa; /* Change header background color */
            }
        /* Search bar and button customization */
        .search-bar {
            margin-bottom: 20px;
        }

            .search-bar .form-control {
                border-radius: 20px; /* Round corners of input field */
            }

            .search-bar .input-group-append button {
                border-radius: 20px; /* Round corners of button */
            }
    </style>
</head>
<body>
    <main>
        <section class="py-5">
            <div class="container mb-5">
                <div class="text-center mb-5">
                    <h1 class="display-5 fw-bolder mb-0"><span class="text-gradient d-inline">Các hội thảo đã tổ chức</span></h1>
                </div>
                <!-- Search bar -->
                <div class="row justify-content-center search-bar">
                    <div class="col-lg-6">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Tìm kiếm theo tên hội thảo">
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="button">Tìm kiếm</button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Workshop table -->
                <div class="row justify-content-center">
                    <div class="col-md-10">
                        <table class="table custom-table">
                            <thead>
                                <tr>
                                    <th scope="col">Tên hội thảo</th>
                                    <th scope="col">Tùy chọn</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Workshops)
                                {
                                    <tr>
                                        <td>@item.WorkshopName</td>
                                        <td>
                                            <a class="btn btn-primary" href="/evaluate?workShopId=@item.Id&&wsSeriesId=@Model.WorkshopSeriesId">Xem chi tiết</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </section>
        <!-- Call to action section-->
        <section class="py-5 bg-gradient-primary-to-secondary text-white">
            <div class="container my-5">
                <div class="text-center">
                    <h2 class="display-4 fw-bolder mb-4">Tạo hội thảo mới?</h2>
                    <a class="btn btn-outline-light btn-lg px-5 py-3 fs-6 fw-bolder" href="/NewWorkshop">Tạo mới</a>
                </div>
            </div>
        </section>
    </main>
</body>
</html>